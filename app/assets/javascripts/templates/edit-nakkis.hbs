<div class="row-fluid">
  <div class="span3"><h4>Type</h4></div>
  <div class="span3"><h4>Start Time</h4></div>
  <div class="span3"><h4>End Time</h4></div>
</div>
{{#each nakkitypes}}
<div class="row-fluid">
  <form>
    <input type="hidden" name="cid" value="{{ this.cid }}" />
    <div class="span3">
      <input type="text" name="type" class="input-small" value="{{ this.type }}" />
    </div>
    <div class="span3">
      <div class="input-append bootstrap-timepicker">
	<input type="text" name="start" value="{{ prettyTimeFromSlot this.start ../party.date }}" class="input-mini time-picker">
    	  <span class="add-on">
    	    <i class="icon-time"></i>
    	  </span>
      </div>
    </div>
    <div class="span3">
      <div class="input-append bootstrap-timepicker">
        <input type="text" name="end" value="{{ prettyTimeFromSlot this.end ../party.date }}" class="input-mini time-picker" >
      	  <span class="add-on">
      	    <i class="icon-time"></i>
      	  </span>
      </div>
    </div>
</div>
</form>
{{/each}}
<div class="row-fluid offset1">
  <button class="creator btn btn-primary">Create New Type</button>
  <button class="setter btn btn-primary">Update NakkitTable</button>
</div>

