<form method="post">
  <div class="controls controls-row">
    <select name="parties" class="selector">
      <option value="">select one to edit</option>
      {{#each parties}}
      <option value="{{ this.cid }}">{{ this.title }}</option>
      {{/each}}
    </select>
    <div class="btn-group">
      <button class="deletor btn btn-danger">Delete selected</button>
      <button class="creator btn btn-primary">New Party</button>
    </div>
  </div>
</form>
